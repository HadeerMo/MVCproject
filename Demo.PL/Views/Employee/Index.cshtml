@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
}

<div>
    <h1>All Employees</h1>
    <br />
    <br />
    <br />
    <a asp-action="Create" class="mb-4 btn btn-primary">Create New Employee</a>
    <form class="my-4" asp-action="Index">
        <div class="row justify-content-center">
            <div class="col-8 ">
                <input type="text" class="form-control" name="SearchValue" />
            </div>
            <div class="col-2 ">
                <input type="submit" value="Search" class="btn btn-success" />
            </div>
        </div>
    </form>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(E => E.Image) </th>
                    <th>@Html.DisplayNameFor(E => E.Name) </th>
                    <th>@Html.DisplayNameFor(E => E.Age) </th>
                    <th>@Html.DisplayNameFor(E => E.Address) </th>
                    <th>@Html.DisplayNameFor(E => E.Salary) </th>
                    <th>@Html.DisplayNameFor(E => E.IsActive) </th>
                    <th>@Html.DisplayNameFor(E => E.Email) </th>
                    <th>@Html.DisplayNameFor(E => E.PhoneNumber) </th>
                    <th>@Html.DisplayNameFor(E => E.Department) </th>
                    <th>@Html.DisplayNameFor(E => E.HireDate) </th>
                    <th>Details </th>
                    <th>Update </th>
                    <th>Delete </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>
                            <img src="~/files/Images/@employee.ImageName" alt="EmployeeImage" class="img-fluid w-75 h-75 rounded-circle" />
                        </td>
                        <td>@Html.DisplayFor(M=> employee.Name)</td>
                        <td>@Html.DisplayFor(M=>employee.Age)</td>
                        <td>@Html.DisplayFor(M=>employee.Address)</td>
                        <td>@Html.DisplayFor(M=>employee.Salary)</td>
                        <td>@Html.DisplayFor(M=>employee.IsActive)</td>
                        <td>@Html.DisplayFor(M=>employee.Email)</td>
                        <td>@Html.DisplayFor(M=>employee.PhoneNumber)</td>
                        <td>@Html.DisplayFor(M=>employee.DepartmentName)</td>
                        <td>@Html.DisplayFor(M=>employee.HireDate)</td>
                        <partial name="_ButtonsPartialView" model="@employee.Id.ToString()" />
                    </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        <div class="mt-5 alert alert-warning">
            <h3>There is No Employees</h3>
        </div>
    }
</div>