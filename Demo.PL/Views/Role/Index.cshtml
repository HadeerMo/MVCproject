@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
}

<div>
    <h1>All Roles</h1>
    <br />
    <br />
    <br />
    <a asp-action="Create" class="mb-4 btn btn-primary">Create New Role</a>
    <form class="my-4" asp-action="Index">
        <div class="row justify-content-center">
            <div class="col-8 ">
                <input type="text" class="form-control" name="SearchValue" placeholder="Search by Email"/>
            </div>
            <div class="col-2 ">
                <input type="submit" value="Search" class="btn btn-success" />
            </div>
        </div>
    </form>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(R => R.Id) </th>
                    <th>@Html.DisplayNameFor(R => R.Name) </th>
                    
                    <th>Details </th>
                    <th>Update </th>
                    <th>Delete </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(M=> role.Id)</td>
                        <td>@Html.DisplayFor(M=>role.Name)</td>
                        <partial name="_ButtonsPartialView" model="@role.Id" />

                    </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        <div class="mt-5 alert alert-warning">
            <h3>There is No Role</h3>
        </div>
    }
</div>