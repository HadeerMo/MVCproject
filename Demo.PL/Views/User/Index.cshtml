@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
}

<div>
    <h1>All Users</h1>
    <br />
    <br />
    <br />
    <form class="my-4" asp-action="Index">
        <div class="row justify-content-center">
            <div class="col-8 ">
                <input type="text" class="form-control" name="SearchValue" placeholder="Search by Email"/>
            </div>
            <div class="col-2 ">
                <input type="submit" value="Search" class="btn btn-success" />
            </div>
        </div>
    </form>
    @if (Model.Count() > 0 && ViewBag.NoUser == null)
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(U => U.Id) </th>
                    <th>@Html.DisplayNameFor(U => U.UserName) </th>
                    <th>@Html.DisplayNameFor(U => U.Email) </th>
                    <th>@Html.DisplayNameFor(U => U.PhoneNumber) </th>
                    
                    <th>Details </th>
                    <th>Update </th>
                    <th>Delete </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(M=> user.Id)</td>
                        <td>@Html.DisplayFor(M=>user.UserName)</td>
                        <td>@Html.DisplayFor(M=>user.Email)</td>
                        <td>@Html.DisplayFor(M=>user.PhoneNumber)</td>
                        <partial name="_ButtonsPartialView" model="@user.Id" />

                    </tr>
                }
            </tbody>
        </table>

    }
    else if (ViewBag.NoUser != null)
    {
        <div class="mt-5 alert alert-warning">
            <h3>@ViewBag.NoUser</h3>
        </div>
    }
    else
    {
        <div class="mt-5 alert alert-warning">
            <h3>There is No User</h3>
        </div>
    }

    
</div>